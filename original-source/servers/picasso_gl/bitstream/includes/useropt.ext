#include <stdio.h>
#include <string.h>
#include <stdlib.h>

extern int mem_alloc_count;

static void *malloc2(size_t size) {
	void   *tmp;
	
//	if (size == 12760)
//		*((long*)0L) = 0L;
	mem_alloc_count++;
	tmp = malloc(size);
	fprintf(stderr, "malloc %d bytes -> 0x%x\n", size, tmp);
	return tmp;
}

static void *realloc2(void *ptr, int size) {
	void   *tmp;
	
	tmp = realloc(ptr, size);
	fprintf(stderr, "realloc (0x%x, %d) -> 0x%x\n", ptr, size, tmp);
	return tmp;
}

static void free2(void *ptr) {
	mem_alloc_count--;
	fprintf(stderr, "free -> 0x%x\n", ptr);
	free(ptr);
}

static char *strdup2(char *str) {
	char    *tmp;
	int     count;

	mem_alloc_count++;
	tmp = strdup(str);
	count = 0;
	while (*str++ != 0)
		count++;
	fprintf(stderr, "strdup (%d) -> 0x%x\n", count, tmp);
	return tmp;
}

#define malloc(x) malloc2(x)
#define realloc(y, x) realloc2(y, x)
#define free(x) free2(x)
#define strdup(x) strdup2(x)

